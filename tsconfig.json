{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
